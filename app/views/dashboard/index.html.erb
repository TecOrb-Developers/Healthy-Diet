<% content_for :javascript do %>
<script type="text/javascript">
  setTimeout(function() {
    window.location.reload();
  }, 3600000);
</script>
<% end %>
<!-- TODO: if not signed in, show sign-in dialog -->
<div class="row" style="background:#DDD">
  <div class="col-xs-12 col-lg-12" style="padding-bottom:15px;">
    <img src=<%= image_path("BannerImage.png")%> width="100%" class="img-responsive" alt="???" style="padding-top:15px;" />
      <div style="border:1px;background-color:white;">

        <% if @completed_trials.present? %>
          <p style="margin-left:2%;">Your completed 28-day Healthy-Diet programs</p>
          <ul>
          <% @completed_trials.each do |ct| %>
            <li>Start date: <%= ct.start_date %> End date: <%= ct.end_date %></li>
          <% end %>
        </ul>
      <% end %>
      <br>
    <% if @registration_step == 'new' %>
      <h2>Welcome to Healthy-Diet<%= @display_name ? ", #{@display_name}" : '' %>!</h2>
      <p style="margin-left:2%;">To begin, please select <%= link_to "Profile", profiles_path %> so we can help build your personalized program.</p>

    <% elsif @registration_step == 'track' %>
      <p style="margin-left:2%;"><%= @display_name ? "#{@display_name}, p" : "P" %>lease select <%= link_to "Risk/Tracks", risk_assessment_profiles_path %> to determine the Healthy-Diet program best for you.</p>

    <% elsif @registration_step == 'supplement' %>
      <p style="margin-left:2%;"><%= @display_name ? "#{@display_name}, p" : "P" %>lease select <%= link_to "Supplements", supplement_selection_profiles_path %> to choose your Healthy-Diet supplements.</p>

    <% elsif @registration_step == 'trial' %>
      <p style="margin-left:2%;">Please select a start date for your 28-day Healthy-Diet program</p>
      <%= form_tag trial_selection_profiles_path, method: :post do %>
        <% @trials.each_with_index do |trial, index| %>
          <%= radio_button_tag :trial, trial.id, index == 0 ? true : false %>
          <%= label_tag :trial, 'Monday, ' + trial.start_date.strftime("%B %d, %Y") %>
          <br />
        <% end %>
        <%= submit_tag 'Select' %>
      <% end %>
    <% elsif @registration_step == 'waiting' %>
      <p style="margin-left:2%;"><h3 style="margin-left:2%;">Get ready! Your Healthy-Diet program is starting in <%= @days_to_next_trial %> days.</h3></p>
      <p style="margin-left:2%;">You have signed up for the following supplements:</p>
      <ul>
      <% @intervention_trials.each do |supplement| %>
        <li><%= supplement.name.humanize %></li>
      <% end %>
      </ul>
      <p style="margin-left:2%;">You can still make changes before the program begins by selecting <%= link_to 'Supplements', supplement_selection_profiles_path %>. Remember, you are committing to take these supplements each day of the 28-day program.</p>
      <p style="margin-left:2%;">
Healthy-Diet.com provides weight management and health maintenance information and is meant to help users in their personal weight and health goals. Healthy-Diet.com is not a medical organization and cannot give you medical advice or diagnosis. No content at Healthy-Diet.com should be construed as such advice or diagnosis. The information and reports generated by Healthy-Diet.com should not be interpreted as a substitute for a doctorâ€™s assessment, evaluation, or treatment.
All users are advised to seek the assessment of a doctor before beginning any weight loss effort or diet. Healthy-Diet.com should only be used by healthy adults. Healthy-Diet.com should not be used by children, pregnant women, or people with any type of health condition. Such people are specifically warned to seek professional medical advice prior to initiating any form of weight loss effort or diet.
</p><br><br>
    <% elsif @registration_step == 'active' %>
      <%= render "log_history" %>
      <h1>Welcome to day <%= @day_count %> of your Healthy-Diet program!</h1>
      <% if @logged_today != true %>
        <%= form_for :daily_log, url: logging_index_path, method: :post do |f| %>
          <% @intervention_trials.each do |trial| %>
            <h2>Did you take your <%= trial.intervention.name.humanize %> today?</h2>
             <%= f.label trial.id, 'Yes' %>
             <%= f.radio_button trial.id, true %>
             <%= f.label trial.id, 'No' %>
             <%= f.radio_button trial.id, false %>
          <% end %>
          <br />
          <%= f.submit 'Submit' %>
        <% end %>
      <% else %>
        <h2>Thank you for logging your supplements. See you tomorrow!</h2>
      <% end %>
    <% end %>
    </div>
    <p style="margin-left:2%;">Comments or questions? Email <a href="#">support@healthy-diet.com</a> and we'll be glad to help!</p>
  </div>
</div>
